<%= render '/heading' %>

<h3>Hello <%= current_user.name %> </h3>

<h4>This is your mood and sample phrase submission page.</h4>
<p>Just assign a mood to each sample phrase taken from your journal, click "Submit" at the bottom and the app will do the rest.</p>

<table border=1 cellpadding=5>
	<caption><b>Mood and Sample Phrase Table</b> </caption>
	<thead>
		<tr>
			<th>Mood</th>
			<th>Sample Phrase</th>
		</tr>
	</thead>

<%= form_for @article, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
  <%= f.text_field :title %>
  <%= f.text_area :body, size: "60x12" %>
  <%= f.submit "Create" %>
<% end %>


<tbody>
	<% @sample_phrases.each do |sample_phrase| %>

			<tr>		
				<td>
					<select>
						<% @moods.each do |mood| %>
							<option value="#{mood.name}"><%= mood.name %></option>
						<% end %>
					</select>
				</td>
				<td>
					<%= sample_phrase %>
				</td>
			</tr>
	<% end %>
</tbody>

</table>

<%= link_to('Submit to Predictions', user_journal_entry_sample_phrases_path(current_user, @journal_entry.id)) %>

<h4> <button type='button'><a href='https://www.googleapis.com/prediction/v1.6/projects/414649711441/hostedmodels/sample.sentiment/predict'>Submit</a></button> to the Predictions Engine.  </h4>

<h3> <%= link_to('Add', new_user_journal_entry_path) %> another journal entry </h3>

